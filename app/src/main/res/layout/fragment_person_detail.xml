<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context="com.example.personing.PersonDetailFragment">

    <TextView
        android:id="@+id/textViewHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Ticket #576"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewHeadline">

        <TableRow>

            <TextView
                android:id="@+id/textViewTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Improvement"
                android:padding="8dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:padding="8dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Praesent in quam velit. Sed tempor ligula risus, eu tristique enim convallis sed. Proin blandit dapibus ante, sit amet tempor magna sagittis at. Sed ultrices orci ut justo tincidunt lacinia. Aenean dignissim odio tortor, sed tincidunt orci vehicula ac. Vestibulum a velit quis orci tempus auctor. Nulla nec placerat diam. Nam a sollicitudin nibh. Ut tempus ornare nisi, vitae imperdiet augue facilisis quis."
                app:layout_constrainedWidth="true" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewUserLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hugo Vogler" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewCompletedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:padding="8dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_gravity="start"/>

        </TableRow>

    </TableLayout>






</androidx.constraintlayout.widget.ConstraintLayout>